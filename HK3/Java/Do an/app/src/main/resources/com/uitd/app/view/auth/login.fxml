<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.uitd.app.controller.LoginController"
>
    <VBox
            alignment="CENTER"
            spacing="20.0"
            AnchorPane.leftAnchor="10.0"
            AnchorPane.rightAnchor="10.0"
            AnchorPane.topAnchor="10.0"
            AnchorPane.bottomAnchor="10.0"
    >
        <Label text="Login Form" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        <TextField promptText="Username"/>
        <PasswordField promptText="Password"/>
        <Button text="Login" styleClass="btn btn-primary" onAction="#handleLogin"/>
    </VBox>
</AnchorPane>
